<Window x:Class="Mail_Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="475" MinWidth="475" MinHeight="350" Background="Gainsboro">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21px"/>
            <RowDefinition Height="25px"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="2,1,1.5,2.5" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button Content="New Profile" Margin="2,2,0.5,1" Grid.Row="1" />
        <Button Content="Remove" Margin="1.5,2,2.5,1" Grid.Row="1" Grid.Column="1"/>
        <Menu Width="Auto" Padding="1" Background="#FFA9D1F4" Margin="0" BorderThickness="0,0,0,1" BorderBrush="#FF6E9BC9" Grid.ColumnSpan="3">
            <MenuItem Header="_Emulator">
                <MenuItem Header="Load..." />
                <MenuItem Header="Load again" />
                <Separator />
                <MenuItem Header="Close" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
